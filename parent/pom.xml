        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.3</version>
                <inherited>true</inherited>
                <configuration>
                    <chmod>false</chmod>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
